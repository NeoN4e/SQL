<Window x:Class="Library.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid x:Name="MainGrid">
        <Grid x:Name="DataGrid"  Margin="5,5,5,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" ToolTip=""/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Button Content="Save" HorizontalAlignment="Left" Margin="10,0,0,5" Width="75" Height="22" VerticalAlignment="Bottom"/>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="75" Click="Button_Close"/>
    </Grid>

</Window>
